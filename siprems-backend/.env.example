# Database Configuration
DB_HOST=localhost
DB_NAME=siprems_db
DB_USER=postgres
DB_PASSWORD=mysecretpassword
DB_PORT=5432

# Flask Configuration
FLASK_ENV=development

# JWT Configuration
JWT_SECRET_KEY=change-this-to-a-secure-random-key-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting Configuration
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100/hour

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Production Notes:
# - Change FLASK_ENV to 'production'
# - Set JWT_SECRET_KEY to a strong random value (min 32 characters)
# - Set DB_PASSWORD to a strong password
# - Update CORS_ALLOWED_ORIGINS to your actual domain
# - Set RATELIMIT_STORAGE_URL to redis://your-redis-host:6379 for production
